BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '0'
            font_size: 48
            multiline: False

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(1)
    Button:
        text: 'Convert miles to km'
        font_size: 48
        on_press: app.handle_conversion()

    Label:
        id: output_label
        font_size: 48
        color: (1, 1, 0, 1)
